# Port configuration
PORT=5678

# Security - IMPORTANT: Generate a strong encryption key
N8N_ENCRYPTION_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# URL Configuration - Update these to your actual domain
WEBHOOK_URL=https://your-n8n-app.onrender.com/
VUE_APP_URL_BASE_API=https://your-n8n-app.onrender.com/

# Timezone Configuration
GENERIC_TIMEZONE=America/Sao_Paulo
TZ=America/Sao_Paulo

# Logging
N8N_LOG_LEVEL=info

# Database Configuration (Auto-populated by Render)
DB_TYPE=postgresdb
DB_POSTGRESDB_DATABASE=$POSTGRES_DATABASE
DB_POSTGRESDB_HOST=$POSTGRES_HOST
DB_POSTGRESDB_PORT=$POSTGRES_PORT
DB_POSTGRESDB_USER=$POSTGRES_USER
DB_POSTGRESDB_SCHEMA=public
DB_POSTGRESDB_PASSWORD=$POSTGRES_PASSWORD

# Execution Settings - Optimized for production
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=168
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=none
EXECUTIONS_DATA_SAVE_ON_PROGRESS=false
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=false

# Performance Settings
N8N_METRICS=true
